<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="80dp">

        <View
            android:id="@+id/separator"
            android:layout_width="0dp"
            android:layout_height="0.75dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:background="#DADADA"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/profilPicture"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="Profil picture"
            app:layout_constraintStart_toStartOf="@id/separator"
            app:layout_constraintTop_toBottomOf="@id/separator"
            android:layout_marginTop="15dp"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Ranjit Singh"
            app:layout_constraintStart_toEndOf="@id/profilPicture"
            app:layout_constraintTop_toTopOf="@id/profilPicture"
            android:textSize="12sp"
            android:layout_marginStart="10dp" />

        <RatingBar
            android:id="@+id/Rating"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/tvName"
            app:layout_constraintBottom_toBottomOf="@id/profilPicture"
            app:layout_constraintStart_toEndOf="@id/profilPicture"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:isIndicator="true"
            style="?android:attr/ratingBarStyleSmall"
            android:rating="5"
            android:stepSize="0.1"
            android:progressTint="@color/gold"/>

        <TextView
            android:id="@+id/tvComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@id/profilPicture"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/jakarta_regular"
            android:textSize="10sp"
            android:lineHeight="14dp"
            tools:text="Service très rapide et nourriture délicieuse, nous mangeons ici chaque week-end, c'est très rapide et savoureux. Continuez ainsi!" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>